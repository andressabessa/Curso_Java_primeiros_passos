package exercicios_uri_1001;

import java.util.Scanner;

public class uri1001 {
	
	//Leia 2 valores inteiros e armazene-os nas variáveis A e B.
	//Efetue a soma de A e B atribuindo o seu resultado na variável X.
	//Imprima a mensagem "X = " (letra X maiúscula) seguido pelo valor da variável X e pelo final de linha. 
	//Cuide para que tenha um espaço antes e depois do sinal de igualdade
	
    
	public static void main(String[] args) {
	Scanner sc = new Scanner(System.in);
	//O comando Scanner permite ler dados de diferentes fontes, como por exemplo: entrada do teclado.
	
	int A, B, X;
	//Declaração de variável
	
	A = sc.nextInt();
	B = sc.nextInt();
	//Comandos que lê um valor inteiro digitado pelo usuário a partir da entrada padrão (teclado) usando o objeto Scanner
	
	X = A + B;
	
	System.out.println("X = " + X);
	//Comando que imprime o valor da variável
}
} 